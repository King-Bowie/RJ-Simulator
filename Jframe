    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        NewCall clientes = new NewCall();
        clientes.setNome(jTxtNome.getText());
        clientes.setEmail(jTxtEmail.getText());
        clientes.setCPF(jTxtCPF.getText());
        clientes.setTelefone(jTxtCPF.getText());
        JOptionPane.showMessageDialog(null,clientes.salvar());
        
        jTxtNome.setText("");
        jTxtEmail.setText("");
        jTxtCPF.setText("");
        jTxtCPF.setText("");        // TODO add your handling code here:
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    File dir = new File("C:\\Users\\YourUser\\YourFolder\\directory");  
            if (!dir.exists()) {
                if (dir.mkdir()) {
                    System.out.println("Successfully created directory!");
                } else {
                    System.out.println("Fail");

                }   }     
    }                                        

